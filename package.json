{
  "name": "annobib",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nuxt dev --host",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "nuxt typecheck",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "npx tsx scripts/db/migrate.ts up",
    "db:migrate:down": "npx tsx scripts/db/migrate.ts down",
    "db:migrate:status": "npx tsx scripts/db/migrate.ts status",
    "db:migrate:validate": "npx tsx scripts/db/migrate.ts validate",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:setup": "docker compose -f infra/docker/docker-compose.yml up -d postgres && docker compose -f infra/docker/docker-compose.yml exec postgres sh -c 'until pg_isready -U annobib; do sleep 1; done' && npx tsx scripts/db/migrate.ts up",
    "db:reset": "docker compose -f infra/docker/docker-compose.yml down -v && pnpm db:setup",
    "db:seed": "npx tsx scripts/db/seed-sources.ts",
    "admin:promote": "npx tsx scripts/promote-admin.ts",
    "kill:dev": "npx tsx scripts/kill-dev.ts",
    "docker:up": "docker info > /dev/null 2>&1 || (echo 'Error: Docker is not running. Start Docker Desktop first.' && exit 1)",
    "docker:down": "docker compose -f infra/docker/docker-compose.yml down",
    "dev:start": "pnpm docker:up && pnpm db:setup && pnpm dev",
    "dev:reset": "pnpm docker:up && pnpm db:reset && pnpm admin:promote admin@test.local admin123 \"Test Admin\" && pnpm dev",
    "ops": "bash infra/scripts/ops.sh",
    "ops:deploy:staging": "bash infra/scripts/ops.sh deploy:staging",
    "ops:deploy:production": "bash infra/scripts/ops.sh deploy:production staging",
    "ops:rollback": "bash infra/scripts/ops.sh rollback",
    "ops:migrate": "bash infra/scripts/ops.sh migrate",
    "ops:migrate:rollback": "bash infra/scripts/ops.sh migrate:rollback",
    "ops:db:connect": "bash infra/scripts/ops.sh db:connect",
    "ops:db:backup": "bash infra/scripts/ops.sh db:backup",
    "ops:db:restore-test": "bash infra/scripts/ops.sh db:restore-test",
    "ops:logs": "bash infra/scripts/ops.sh logs",
    "ops:shell": "bash infra/scripts/ops.sh shell",
    "ops:port-forward": "bash infra/scripts/ops.sh port-forward",
    "ops:health": "bash infra/scripts/ops.sh health",
    "ops:tf:init": "bash infra/scripts/ops.sh tf:init",
    "ops:tf:plan": "bash infra/scripts/ops.sh tf:plan",
    "ops:tf:apply": "bash infra/scripts/ops.sh tf:apply",
    "ops:cluster:info": "bash infra/scripts/ops.sh cluster:info",
    "ops:seed": "bash infra/scripts/ops.sh seed"
  },
  "dependencies": {
    "@google-cloud/opentelemetry-cloud-monitoring-exporter": "^0.21.0",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "^3.0.0",
    "@langchain/textsplitters": "^1.0.1",
    "@nuxt/icon": "^1.0.0",
    "@nuxt/image": "^1.3.0",
    "@nuxt/ui": "^4.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-metrics": "^2.5.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/sdk-trace-base": "^2.5.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@pinia/nuxt": "^0.5.1",
    "@vueuse/core": "^10.7.2",
    "@vueuse/nuxt": "^10.7.2",
    "citeproc": "^2.4.63",
    "d3": "^7.9.0",
    "date-fns": "^3.3.1",
    "docx": "^9.5.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.29.3",
    "exceljs": "^4.4.0",
    "jsdom": "^24.0.0",
    "langchain": "^1.2.17",
    "mammoth": "^1.11.0",
    "nanoid": "^5.1.6",
    "node-html-parser": "^6.1.12",
    "nuxt": "^4.0.0",
    "nuxt-auth-utils": "^0.0.21",
    "openai": "^4.26.1",
    "pdf-parse": "^2.4.5",
    "pg": "^8.11.3",
    "pinia": "^2.1.7",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.3",
    "puppeteer": "^24.37.3",
    "sharp": "^0.34.5",
    "stripe": "^14.14.0",
    "tailwindcss": "^4.0.0",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.0.8",
    "@nuxt/eslint-config": "^0.2.0",
    "@nuxt/test-utils": "^3.23.0",
    "@oxc-minify/binding-darwin-arm64": "0.110.0",
    "@oxc-parser/binding-darwin-arm64": "0.112.0",
    "@oxc-transform/binding-darwin-arm64": "0.110.0",
    "@playwright/test": "^1.41.1",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.11.10",
    "@types/pg": "^8.11.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "@vue/test-utils": "^2.4.4",
    "drizzle-kit": "^0.20.13",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "happy-dom": "^13.3.8",
    "msw": "^2.1.5",
    "prettier": "^3.8.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "vue-tsc": "^3.2.4"
  },
  "packageManager": "pnpm@8.15.1",
  "pnpm": {
    "overrides": {
      "sharp": "^0.34.5"
    }
  }
}
